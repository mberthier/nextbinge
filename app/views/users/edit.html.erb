<div class="container">
  <%= simple_form_for(@user) do |f| %>
    <div class="form-inputs">
      <%= f.input :first_name,
      required: true,
      autofocus: true,
      label: false,
      placeholder: 'first name',
      input_html: { autocomplete: "first name", style: 'background-color:transparent', class: 'input2' }
       %>
      <%= f.input :last_name, required: true, autofocus: true, label: false,
      input_html: { autocomplete: "last name", style: 'background-color:transparent', class: 'input2' },
      placeholder: 'last name'
       %>
      <%= f.input :email, required: true, autofocus: true, label: false,
      input_html: { autocomplete: "email", style: 'background-color:transparent', class: 'input2' },
      placeholder: 'email' %>
      <div class="streaming-services d-flex justify-content-left">
        <%= f.input :netflix, as: :select, required: false, wrapper_html: { class: "mr-3" } %>
        <%= f.input :amazon, as: :select, required: false, autofocus: false, wrapper_html: { class: "mr-3" } %>
        <%= f.input :disney_plus, as: :select, required: false, autofocus: false, wrapper_html: { class: "mr-3" } %>
      </div>
      <div class="password">
        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    label: false,
                    input_html: {style: 'background-color:transparent', class: 'input2', autocomplete: "new-password" },
                    placeholder: 'password'
                    %>
        <%= f.input :password_confirmation,
                    required: false,
                    label: false,
                    input_html: {style: 'background-color:transparent', class: 'input2', autocomplete: "new-password" },
                    placeholder: 'password confirmation' %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    label: false,
                    input_html: {style: 'background-color:transparent', class: 'input2', autocomplete: "current-password" },
                    placeholder: 'current password' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Update", class: "c-account-home-button3" %>
    </div>
  <% end %>
</div>
