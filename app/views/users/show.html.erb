<div class="user-cover"></div>
<div class="user-banner">
  <div class="user-details">
    <h2>Welcome back <%= @user.first_name %>!</h2>
  </div>
</div>
<div class="container">
  <div class="user-info">
    <div class="user-streaming-services">
      <h2 class="your-services">Your services</h2>
      <div class="edit-user-link">
        <%= link_to "Edit details", edit_user_path(current_user), class: "user-edit-btn" %>
      </div>
      <% if @user.netflix? %>
        <%= image_tag("netflix_logo.png", class: "user-netflix-logo-1") %>
      <% else %>
        <%= image_tag("netflix_logo.png", class: "user-netflix-logo-2") %>
      <% end %>
      <% if @user.amazon? %>
        <%= image_tag("amazon_logo.png", class: "user-amazon-logo-1") %>
      <% else %>
        <%= image_tag("amazon_logo.png", class: "user-amazon-logo-2") %>
      <% end %>
      <% if @user.disney_plus? %>
        <%= image_tag("disney_logo.png", class: "user-disney-logo-1") %>
      <% else %>
        <%= image_tag("disney_logo.png", class: "user-disney-logo-2") %>
      <% end %>
    </div>
  </div>
</div>

<div class="media-user-container">
  <input type="radio" name="tabs" id="tab1" checked />
  <label for="tab1" id="tab1">Bookmarked</label>
  <input type="radio" name="tabs" id="tab2" />
  <label for="tab2" id="tab2">Watched</label>
  <input type="radio" name="tabs" id="tab3" />
  <label for="tab3" id="tab3">Excluded</label>
  <div class="tab content1">
    <div class="media-user-details-container">
      <div class="bookmarked-list">
        <%= render "media_user/bookmarked_index" %>
      </div>
    </div>
  </div>
  <div class="tab content2">
    <div class="media-user-details-container">
      <div class="watched-list">
        <%= render "media_user/watched_index" %>
      </div>
    </div>
  </div>
  <div class="tab content3">
    <div class="media-user-details-container">
      <div class="excluded-list">
        <%= render "media_user/excluded_index" %>
      </div>
    </div>
  </div>
</div>
